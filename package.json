{
  "name": "jyro-vscode",
  "displayName": "Jyro",
  "description": "Full language server support for the Jyro scripting language",
  "version": "1.1.9",
  "publisher": "meschsystems",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/meschsystems/JyroVsCodeLanguageServer"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "jyro",
    "language-server",
    "scripting",
    "data-transformation"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "jyro",
        "aliases": [
          "Jyro",
          "jyro"
        ],
        "extensions": [
          ".jyro"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "jyro",
        "scopeName": "source.jyro",
        "path": "./syntaxes/jyro.tmLanguage.json"
      },
      {
        "scopeName": "markdown.jyro.codeblock",
        "path": "./syntaxes/jyro.markdown.tmLanguage.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.jyro": "jyro"
        }
      }
    ],
    "snippets": [
      {
        "language": "jyro",
        "path": "./snippets/jyro.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Jyro Language Server",
      "properties": {
        "jyro.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the Jyro language server."
        },
        "jyro.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "jyro.format.indentSize": {
          "scope": "resource",
          "type": "number",
          "default": 4,
          "description": "Number of spaces for indentation."
        },
        "jyro.format.useTabs": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "description": "Use tabs instead of spaces for indentation."
        },
        "jyro.warnOnHostFunctions": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Show informational messages when non-standard host functions are referenced."
        }
      }
    },
    "configurationDefaults": {
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": "variable.language.data.jyro",
            "settings": {
              "foreground": "#F6AD55"
            }
          }
        ]
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "clean": "rimraf dist client/out server/out shared/out tsconfig.tsbuildinfo client/tsconfig.tsbuildinfo server/tsconfig.tsbuildinfo shared/tsconfig.tsbuildinfo",
    "precompile": "npm run clean",
    "compile": "tsc -b",
    "compile:esbuild": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "watch:tsc": "tsc -b -w",
    "package": "npm run clean && npm run compile && node esbuild.js --production",
    "lint": "eslint ./client/src ./server/src ./shared/src",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.10.0",
    "esbuild": "^0.24.2",
    "eslint": "^9.0.0",
    "rimraf": "^6.1.0",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.0.0"
  }
}
