{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Jyro",
  "scopeName": "source.jyro",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#constants" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#functions" },
    { "include": "#data-keyword" },
    { "include": "#variables" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.jyro",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.flow.jyro",
          "match": "(?<!\\.)\\b(if|then|else|elseif|end|while|do|for|foreach|in|to|downto|by|switch|case|default|return|fail|break|continue)\\b"
        },
        {
          "name": "keyword.declaration.jyro",
          "match": "\\b(var)\\b"
        },
        {
          "name": "keyword.operator.logical.jyro",
          "match": "(?<!\\.)\\b(and|or|not|is)\\b"
        },
        {
          "name": "storage.type.jyro",
          "match": "(?<!\\.)\\b(number|string|boolean|object|array|null)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.increment.jyro",
          "match": "\\+\\+|--"
        },
        {
          "name": "keyword.operator.arrow.jyro",
          "match": "=>"
        },
        {
          "name": "keyword.operator.null-coalescing.jyro",
          "match": "\\?\\?"
        },
        {
          "name": "keyword.operator.assignment.compound.jyro",
          "match": "\\+=|-=|\\*=|/=|%="
        },
        {
          "name": "keyword.operator.comparison.jyro",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.arithmetic.jyro",
          "match": "\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.assignment.jyro",
          "match": "(?<![+\\-*/%!<>])=(?![>=])"
        },
        {
          "name": "keyword.operator.ternary.jyro",
          "match": "\\?(?!\\?)|:"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.jyro",
          "match": "(?<!\\.)\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.jyro",
          "match": "(?<!\\.)\\b(null)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.jyro",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.jyro",
              "match": "\\\\([0btnfr\"'\\\\]|\\/|u[0-9A-Fa-f]{4})"
            },
            {
              "name": "invalid.illegal.unrecognized-escape.jyro",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.jyro",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.jyro",
              "match": "\\\\([0btnfr\"'\\\\]|\\/|u[0-9A-Fa-f]{4})"
            },
            {
              "name": "invalid.illegal.unrecognized-escape.jyro",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.jyro",
          "match": "\\b0[xX][0-9A-Fa-f]+\\b"
        },
        {
          "name": "constant.numeric.binary.jyro",
          "match": "\\b0[bB][01]+\\b"
        },
        {
          "name": "constant.numeric.decimal.jyro",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.jyro",
          "match": "\\b(ToUpper|ToLower|Trim|Replace|Contains|StartsWith|EndsWith|Split|Join|Substring|ToNumber|PadLeft|PadRight|RegexTest|RegexMatch|RegexMatchAll|RegexMatchDetail|RandomString|Length|Append|Prepend|First|Last|IndexOf|Reverse|Slice|Concatenate|Distinct|Sort|Flatten|FlattenOnce|Range|Skip|Insert|RemoveAt|RemoveFirst|RemoveLast|RandomChoice|SortByField|GroupBy|SelectMany|Abs|Floor|Ceiling|Min|Max|Power|SquareRoot|Log|Sum|Average|Clamp|Median|Mode|RandomInt|Now|Today|ParseDate|FormatDate|DateAdd|DateDiff|DatePart|WhereByField|FindByField|AnyByField|AllByField|CountIf|Select|Project|Omit|Map|Where|Reduce|Each|Find|All|Any|SortBy|TypeOf|Equal|NotEqual|Coalesce|ToString|ToBoolean|Keys|Values|HasProperty|Merge|Clone|NewGuid|Base64Encode|Base64Decode|FromJson|ToJson|ValidateRequired|ValidateSchema)\\b"
        }
      ]
    },
    "data-keyword": {
      "patterns": [
        {
          "name": "variable.language.data.jyro",
          "match": "\\bData\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.jyro",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.parameters.begin.jyro",
          "match": "\\("
        },
        {
          "name": "punctuation.definition.parameters.end.jyro",
          "match": "\\)"
        },
        {
          "name": "punctuation.definition.array.begin.jyro",
          "match": "\\["
        },
        {
          "name": "punctuation.definition.array.end.jyro",
          "match": "\\]"
        },
        {
          "name": "punctuation.definition.object.begin.jyro",
          "match": "\\{"
        },
        {
          "name": "punctuation.definition.object.end.jyro",
          "match": "\\}"
        },
        {
          "name": "punctuation.separator.comma.jyro",
          "match": ","
        },
        {
          "name": "punctuation.accessor.jyro",
          "match": "\\."
        }
      ]
    }
  }
}
